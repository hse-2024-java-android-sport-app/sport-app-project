<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RegistrationWindow">

    <TextView
        android:id="@+id/idHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/type"
        android:textAlignment="center"
        android:textColor="@color/violet"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/sportsmanButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:contentDescription="@string/sportsman"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/sportsman_icon" />

        <ImageButton
            android:id="@+id/coachButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:contentDescription="@string/coach"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/coach_icon" />
    </LinearLayout>
</LinearLayout>