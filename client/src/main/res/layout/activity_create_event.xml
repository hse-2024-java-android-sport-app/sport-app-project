<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sportsman.ui.trainingEvents.TrainingEventsWindow">

    <TextView
        android:id="@+id/idHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:text="@string/create_event"
        android:textAlignment="center"
        android:textColor="@color/violet"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/selectDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/_1_select_date"
        android:textColor="@color/violet"
        android:textSize="16sp" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"/>

    <TextView
        android:id="@+id/chooseTrainingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/_2_choose_a_way_to_create_a_training"
        android:textColor="@color/violet"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <Button
            android:id="@+id/choseEvent"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="157dp"
            android:layout_height="115dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="0.4"
            android:text="@string/choose_event"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/orLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/or"
            android:textColor="@color/violet"
            android:textSize="16sp" />

        <Button
            android:id="@+id/createEvent"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="177dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_weight="0.6"
            android:text="@string/create_event"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
